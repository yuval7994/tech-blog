<section>
  <h1>Welcome, {{username}}!</h1>
</section>
<section>
  <button id="add-blog" class="btn"> Add Blog</button>

  <form class="new-blog-form hide">
    <div>
      <label for="blog-title">Title</label>
      <input type="text" id="blog-title" name="blog-title" />
    </div>
    <div>
      <label for="content">Content</label>
      <input id="content" name="content" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if blogs.length}}
<section>
  <h2>Your blogs</h2>
  <ol>
    {{#each blogs as |blog|}}
    <li>
      {{> blog-info blog}}
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-blog.js"></script>
